<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VIVARAN</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <style>
    body {
      font-family: 'Montserrat', sans-serif;
      background-color: #f4f4f4;
    }

    .navbar {
      background-color: #333;
      color: #fff;
    }

    .blog-post {
      background-color: #fff;
      padding: 20px;
      border-radius: 5px;
      margin-bottom: 20px;
      box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    }

    .blog-post h2 {
      color: #333;
      margin-bottom: 10px;
    }

    .blog-post p {
      color: #777;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="#">VIVARAN</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">About</a>
          </li>
       
          <li class="nav-item">
            <a class="nav-link" href="/create">CreateBlog</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Blog Posts -->
  <div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
          <%  output.forEach((element)=>{ %>
                <div class="blog-post">
                    <h2><%= element.title  %></h2>
                    <p class="text-muted">By <%= element.author %> | Published on <%= element.dateString %></p>
                   
                    <a href="/post/<%= element.fileid %>" class="btn btn-primary">Read More</a>
                  </div>


           <% }) %>
     

          
      </div>


      <div class="col-lg-4">
        <div class="blog-sidebar">
          <h4>Categories</h4>
          <ul>
            <li><a href="/category/technology">Technology</a></li>
            <li><a href="/category/travel">Travel</a></li>
            <li><a href="/category/food">Food</a></li>
            <li><a href="/category/fashion">Fashion</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
